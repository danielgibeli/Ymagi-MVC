@model  YmagiWebMvc.Models.ViewModels.OscFormViewModel
@{
    ViewData["Title"] = "Editar";
}

<h4>Editar Voluntários</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Voluntario.Id"/>
            <div class="form-group">
                <label asp-for="Voluntario.Nome" class="control-label"></label>
                <input asp-for="Voluntario.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Voluntario.Email" class="control-label"></label>
                <input asp-for="Voluntario.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Voluntario.Celular" class="control-label"></label>
                <input asp-for="Voluntario.Celular" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Voluntario.Telefone" class="control-label"></label>
                <input asp-for="Voluntario.Telefone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Voluntario.Nascimento" class="control-label"></label>
                <input asp-for="Voluntario.Nascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Voluntario.OscId" class="control-label"></label>
                <select asp-for="Voluntario.OscId" asp-items="@(new SelectList(Model.Oscs,"Id", "NomeFantasia"))"
                        class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
